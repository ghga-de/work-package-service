## creating building container
FROM python:3.13-slim-trixie AS builder
# update and install dependencies
RUN apt-get update && apt-get upgrade -y
RUN pip install build
# copy code
COPY . /service
WORKDIR /service
# build wheel
RUN python -m build

# creating running container
FROM python:3.13-slim-trixie
# update and install dependencies
RUN apt-get update && \
    apt-get upgrade -y && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*
# create new user first
RUN useradd --create-home appuser
# copy and install requirements and wheel
WORKDIR /service
COPY --from=builder /service/lock/requirements.txt /service
RUN pip install --no-cache-dir --no-deps -r requirements.txt && \
    rm requirements.txt
COPY --from=builder /service/dist/ /service
RUN pip install --no-cache-dir --no-deps *.whl && \
    rm *.whl
# switch to non-root user
WORKDIR /home/appuser
USER appuser
# set environment
ENV PYTHONUNBUFFERED=1

ENTRYPOINT ["opentelemetry-instrument", "wps"]
CMD ["run-rest"]
